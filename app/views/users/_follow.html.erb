<%= friendship_status(@current_user, @user) %>
	<% unless Friendship.exists?(@current_user.id, @user.id) %>
	<br />
	<%= link_to "Request friendship with #{@user.name}",
				{ :controller => "friendship", :action => "create", :id => @user.id },
				:confirm => "Send friend request to #{@user.name}?" %>
	<% end %>


